<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradienttree"
    android:layout_height="match_parent"
    >





    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
               android:layout_marginBottom="50dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal"
                android:text="Welcome Teacher"
                android:textSize="25sp"
                android:textColor="#fff"
                android:textStyle="bold"
                app:fontFamily="@font/aladin"/>


            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Class Name"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorHint"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp">

            </EditText>





            <EditText
                android:id="@+id/editTextCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Class Code"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorHint"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"/>



            <EditText
                android:id="@+id/editTextSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="14sp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="Class Subject"
                android:imeOptions="actionNext"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorHint"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonCreateClass"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="Creat Class"
                    android:textAllCaps="false"
                   android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_transparent"
                    />

                <Button
                    android:id="@+id/buttonIdGen"
                    android:text="Generate Id"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_transparent"

                    />




            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
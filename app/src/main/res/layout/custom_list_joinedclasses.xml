<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"

    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradienttree"
        android:padding="16dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageone"
            android:src="@drawable/blackboard">


        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:text="Class"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/gitchgitch_bold"
            android:layout_toRightOf="@+id/imageone"
            android:layout_toEndOf="@+id/imageone"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">



        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClassSection"
            android:text=""
            android:textSize="22sp"
            android:fontFamily="@font/gitchgitch_bold"
            android:textColor="#000"
            android:layout_toRightOf="@+id/imageone"
            android:layout_toEndOf="@+id/imageone"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"

            android:layout_below="@+id/textViewName">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:textColor="#000000"
                android:text="Subject"
                android:fontFamily="@font/gitchgitch_bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Class ID"
                android:textColor="#000000"
                android:fontFamily="@font/gitchgitch_bold"
                android:textSize="20sp" />

        </LinearLayout>














    </RelativeLayout>

</androidx.cardview.widget.CardView>